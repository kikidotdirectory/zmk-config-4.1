#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <behaviors/visorbearer_led.dtsi>

#include "zmk-helpers/helper.h"
#include "visorbearer.h"

/* HOUSEKEEPING */
// Apply matrix transform for physical layout
ZMK_APPLY_MATRIX_TRANSFORM(visorbearer_13332_transform)

// Define shorthands for QoL & readability
#define APT  0
#define NAV  1
#define NROW 2
#define FUN  3

#define XXX &none
#define ___ &trans

#define KEYS_L LT0 LT1 LT2 LT3 LM0 LM1 LM2 LM3 LM4 LB1 LB2 LB3  // left-hand keys
#define KEYS_R RT0 RT1 RT2 RT3 RM0 RM1 RM2 RM3 RM4 RB1 RB2 RB3  // right-hand keys
#define THUMBS LH0 LH1 RH0 RH1                                  // thumb keys

/* GLOBAL DEFAULTS */

#define QUICK_TAP_MS 175

&soft_off { hold-time-ms = <5000>; };

&sk {
  release-after-ms = <900>;
  quick-release;
};

&sl { // Allow sticky mods to chord across sticky layers.
  ignore-modifiers;
};

&lt {
  flavor = "balanced";
  tapping-term-ms = <200>;
  quick-tap-ms = <QUICK_TAP_MS>;
};

/* CUSTOM BEHAVIORS */
#define AS(keycode) &as LS(keycode) keycode     // Autoshift Macro
#define MEH LS(LC(LALT))

// Alt+Tab swapper, requires tri-state module.
ZMK_TRI_STATE(swapper, bindings = <&kt LGUI>, <&kp TAB>, <&kt LGUI>;
              ignored-key-positions = <LT3 LM1 LM2 LM3 LM4>;)

ZMK_TRI_STATE(tabswapper, bindings = <&kt LCTL>, <&kp TAB>, <&kt LCTL>;
              ignored-key-positions = <LT3 LM1 LM2 LM3 LM4>;)

// Define mod-morph with a *single* mod trigger for less repetition.
#define SIMPLE_MORPH(NAME, MOD, BINDING1, BINDING2)                            \
  ZMK_MOD_MORPH(NAME, mods = <(MOD_L##MOD | MOD_R##MOD)>;                      \
                bindings = <BINDING1>, <BINDING2>;)

// Tap: comma | Shift + tap: semicolon
SIMPLE_MORPH(comma_morph, SFT, &kp COMMA, &kp SEMICOLON)
// Tap: period | Shift + tap: colon
SIMPLE_MORPH(dot_morph, SFT, &kp DOT, &kp COLON)

// Tap: parentheses | Shift + tap: angle bracket
SIMPLE_MORPH(lpar_morph, SFT, &kp LPAR, &kp LT)
SIMPLE_MORPH(rpar_morph, SFT, &kp RPAR, &kp GT)

// Tap: backspace | Shift + tap: delete
SIMPLE_MORPH(bksp_del, SFT, &kp BACKSPACE, &kp DELETE)

ZMK_MACRO(qu,
  bindings = <&kp Q &kp U>;
)

/* COMBOS */
/*    VISORBEARER KEY MATRIX / LAYOUT MAPPING
      ╭──────────────────┬──────────────────╮
      │ LT3 LT2 LT1 LT0  │  RT0 RT1 RT2 RT3 │
  ╭───╯ LM3 LM2 LM1 LM0  │  RM0 RM1 RM2 RM3 ╰───╮
  │ LM4 LB3 LB2 LB1      │      RB1 RB2 RB3 RM4 │
  ╰───────────╮ LH1 LH0  │  RH0 RH1 ╭───────────╯
              ╰──────────┴──────────╯
*/

/* COMBOS */
#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

/* Crossbody combos */
ZMK_COMBO(softoff, &vb_soft_off, LT0 RT0, APT, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(capslock, &kp CAPSLOCK,  LT3 RT3,     APT                   , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(capsword, &caps_word,    LM1 RM1,     APT                   , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Horizontal combos - left hand */
ZMK_COMBO(qu,    &qu,          LT2 LT1,         APT                   , COMBO_TERM_SLOW, COMBO_IDLE_FAST)
ZMK_COMBO(v,     &kp V,        LT3 LT2,         APT                   , COMBO_TERM_SLOW, COMBO_IDLE_FAST)
ZMK_COMBO(esc,   &kp ESCAPE,   LT3 LT1,         APT NAV NROW          , COMBO_IDLE_SLOW, COMBO_IDLE_SLOW)

// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
// chording of mods.
ZMK_COMBO(enter_l,&hl LA(LC(LGUI)) ENTER ,LM3 LM2 LM1, APT NAV NROW      , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(tab,   &hl LC(LGUI) TAB,  LM3 LM1,     APT NAV NROW    , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(q,     &kp Q,            LB3 LB2,     APT                   , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(boot,  &bootloader,      LM4 LB3 LB2, APT                   , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(z,     &hl LS(LCTRL)Z,   LB2 LB1,     APT                   , COMBO_TERM_SLOW, COMBO_IDLE_FAST)
ZMK_COMBO(undo,  &kp LG(Z),        LB3 LB2,                   NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(redo,  &kp LS(LG(Z)),    LB2 LB1,                   NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(nrow,  &mo NROW,         LH1 LH0,     APT                   , COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Vertical combos - left hand */
ZMK_COMBO(lbkt,  &kp LBKT,         LT2 LM2,     APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(lpar,  &lpar_morph,      LT1 LM1,     APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Horizontal combos - right hand */
ZMK_COMBO(apos,  &kp APOS,         RT3 RT2,     APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_FAST)
ZMK_COMBO(grave, &kp GRAVE,        RT2 RT1,     APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(enter_r, &hr RC(RGUI) ENTER,RM3 RM1,     APT NROW NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(bksp_r,  &hr RC(RA(RGUI)) BACKSPACE, RM3 RM2 RM1,        APT NROW  NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(fslash,&kp SLASH,    RB3 RB2,         APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_FAST)
ZMK_COMBO(bslash,   &kp BSLH,  RB2 RB1,     APT NROW     NAV      , COMBO_TERM_SLOW, COMBO_IDLE_FAST)

/* Vertical combos - right hand */
ZMK_COMBO(rbkt,  &kp RBKT,     RT2 RM2,         APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(rpar,  &rpar_morph,  RT1 RM1,         APT NROW      NAV     , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)


/ {
    behaviors {
      as: auto_shift {
        compatible = "zmk,behavior-hold-tap";
        #binding-cells = <2>;
        tapping_term_ms = <250>;
        // quick_tap_ms = <0>;
        require-prior-idle-ms = <100>;
        flavor = "tap-preferred";
        bindings = <&kp>, <&kp>;
      };

      ht: hold_tap {
        compatible = "zmk,behavior-hold-tap";
        #binding-cells = <2>;
        tapping_term_ms = <200>;
        flavor = "balanced";
        bindings = <&kp>, <&kp>;
      };
      hrm: alpha_hold_tap {
        compatible = "zmk,behavior-hold-tap";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <280>;
        quick-tap-ms = <175>;
        require-prior-idle-ms = <150>;
        bindings = <&kp>, <&kp>;
      };

      hl: left_homerow_mods {
        compatible = "zmk,behavior-hold-tap";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <280>;
        quick-tap-ms = <QUICK_TAP_MS>;
        require-prior-idle-ms = <150>;
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_R THUMBS>;
        hold-trigger-on-release;
      };

      hr: right_homerow_mods {
        compatible = "zmk,behavior-hold-tap";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <280>;
        quick-tap-ms = <QUICK_TAP_MS>;
        require-prior-idle-ms = <150>;
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_L THUMBS>;
        hold-trigger-on-release;
      };

      sabk: shift_to_alt_backspace {
        compatible = "zmk,behavior-mod-morph";
        #binding-cells = <0>;
        bindings = <&kp BSPC>, <&kp LA(BSPC)>;
        mods = <(MOD_LSFT|MOD_RSFT)>;
      };

      smart_shift: smart_shift {
        compatible = "zmk,behavior-mod-morph";
        #binding-cells = <0>;
        bindings = <&sk LSHFT>, <&caps_word>;
        mods = <(MOD_LSFT|MOD_RSFT)>;
      };

      sym_bspc: left_thumb_hold_tap {
        compatible = "zmk,behavior-hold-tap";
        #binding-cells = <2>;
        flavor = "tap-preferred";
        tapping-term-ms = <150>;
        quick-tap-ms = <200>;
        bindings = <&mo>, <&sabk>;
      };
    };

    conditional_layers {
      compatible = "zmk,conditional-layers";
      tri_layer {
        if-layers = <1 2>;
        then-layer = <3>;
      };
    };

    keymap {
      compatible = "zmk,keymap";

      base {
        display-name = "Base";
        bindings = <
        //                ╭─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────╮
                            &kp W         &kp F         &kp P         &kp B             &kp J         &kp L         &kp U         &kp Y
        //  ╭─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────╮
              &hl LSHFT R   &hl LCTL S    &hl LALT T    &hl LGUI H     &kp K            &kp X         &hr RGUI N    &hr RALT A    &hr RCTL I   &hr RSHIFT O
        //  ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯   ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯
                            &kp C         &kp G        &kp D                                          &kp M         &comma_morph  &dot_morph
        //                ╰─────────────┼─────────────┼─────────────┼─────────────╮   ╭─────────────┼─────────────┼─────────────┼─────────────╯
                                                        &kp LSHFT     &lt NAV SPACE     &lt NROW E    &smart_shift
        //                                            ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
        >;
      };

      nav {
        display-name = "Navigation";
        bindings = <
        //                ╭─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────╮
                            &kp LS(TAB)   &tabswapper   &swapper      ___               ___           ___           ___           ___
        //  ╭─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────╮
              &kp LEFT      &kp DOWN      &kp UP        &kp RIGHT     ___               ___           ___           ___           ___           ___
        //  ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯   ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯
                            &kp LG(C)     &kp LG(X)     &kp LG(V)                                    ___           ___           ___
        //                ╰─────────────┼─────────────┼─────────────┼─────────────╮   ╭─────────────┼─────────────┼─────────────┼─────────────╯
                                                        ___           ___               ___           ___
        //                                            ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
        >;
      };

      nrow {
        display-name = "NRow";
        bindings = <
        //                ╭─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────╮
                            &kp AT        &kp HASH      &kp DLLR      &kp UNDER         &kp EQUAL     &kp CARET     &kp AMPS      &kp STAR
        //  ╭─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────╮
              &hl LGUI N1   &hl LALT N2   &hl LCTRL N3  &hl LSHFT N4  &kp MINUS         &kp PLUS      &hr RSHFT N6  &hr RCTRL N7  &hr RALT N8   &hr RGUI N9
        //  ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯   ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯
                            &kp DOT       &kp PERCENT   &kp N5                                        ___           ___           ___
        //                ╰─────────────┼─────────────┼─────────────┼─────────────╮   ╭─────────────┼─────────────┼─────────────┼─────────────╯
                                                        ___           &kp N0            ___           ___
        //                                            ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
        >;
      };

      func {
        display-name = "FuncSettings";
        bindings = <
        //                ╭─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────╮
                            &kp F5        &kp F6        &kp F7        &kp F11           &vb_bt_clr    &vb_bt_sel 1  &vb_bt_sel 2  &vb_bt_sel 3
        //  ╭─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────╮
              &kp F1        &kp F2        &kp F3        &kp F4        &kp F12           ___           &kp C_PP      &kp C_VOL_DN  &kp C_VOL_UP  &kp C_MUTE
        //  ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯   ╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────╯
                            &kp F8        &kp F9        &kp F10                                       ___           ___           ___
        //                ╰─────────────┼─────────────┼─────────────┼─────────────╮   ╭─────────────┼─────────────┼─────────────┼─────────────╯
                                                        ___           ___               ___           ___
        //                                            ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
        >;
      };

    };
};
